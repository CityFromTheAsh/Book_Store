<h1>New Message</h1>
<%= form_for @message do |f|%>
    <div class="form-group">
      <%= f.hidden_field(:sender_id, value: current_user.id) %>
      <%= f.hidden_field :recipient_id, value: params[:user_id]%>
      <div class="field">
        <%=f.label :message %></br>
        <%= f.text_area :message%>
      </div>
      <div class="field">
        <%= f.submit %>
      </div>
    </div>
<% end %>
