  <div class="container">
    <div class="navbar navbar-inverse navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <strong class="navbar-brand"><%=link_to 'Books nutting', books_path, class:'nav navbar-nav'%></strong>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to "Home Page", controller: 'pasteboard', action: 'home'  %></li>
            <li><%= link_to "About", controller: 'pasteboard', action: "about"  %></li>
            <li><%= link_to "Contact", controller: 'pasteboard', action: 'contact'  %></li>
            <li><%= link_to "Find seller", users_path %></li>
