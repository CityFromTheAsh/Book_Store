            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" ><os-p>My books<span class="caret"></span></os-p></a>
              <ul class="dropdown-menu" role="menu">
                <% Book.status.values.each do |value| %>
                    <li>
                      <%= link_to Book.status.find_value(value).text + ':' +@book_counts[value.to_sym].to_s, user_books_path(current_user, status: value) %>
                    </li>
                <% end %>
              </ul>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
