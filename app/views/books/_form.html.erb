<%= form_for(book, html: {multipart: true}) do |f| %>
    <div class='form-group'>
      <% if book.errors.any? %>
          <div id='error_explanation'>
            <h2><%= pluralize(book.errors.count, 'error') %> prohibited this book from being saved:</h2>
            <ul>
              <% book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= f.label t(:title, scope: :books) %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(:author, scope: :books) %>
        <%= f.text_field :author, class: "form-control"  %>
      </div>

      <div class="field">
        <%= f.label t(:price, scope: :books)%>
        <%= f.text_field :price, class: "form-control"  %>
      </div>

      <div class="field">
        <%= f.label t(:page_count, scope: :books) %>
        <%= f.text_field :page_count, class: "form-control"  %>
      </div>


      <div class="field">
        <%= f.label t(:binding, scope: :books) %>
        <%= f.select :binding, binding:[:hardcover, :softcover] %>
      </div>

      <div class="field">
        <%= f.label t(:genre, scope: :books) %>
        <%= f.text_field :genre, class: "form-control"  %>
      </div>

      <div class="field">
        <%= f.label t(:about, scope: :books) %>
        <%= f.text_area :about, class: "form-control"  %>
      </div>

      <div class="field">
      <%= f.fields_for :images, Image.new do |p| %>
          <div class="field">
            <%= p.label t(:image, scope: :books) %><br>
            <%= p.file_field :image, multiple: true, name: "images[image][]" %>
          </div>
      <% end %>
      </div>

      <div class="actions">
        <%= f.submit class: "btn btn-default dropdown-toggle" %>
      </div>
    </div>
<% end %>
