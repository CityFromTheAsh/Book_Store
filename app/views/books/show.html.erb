<% require 'carrierwave/orm/activerecord' %>
<%= render 'layouts/top_panel' %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Price:</strong>
  <%= @book.price %>
</p>

<p>
  <strong>Page count:</strong>
  <%= @book.page_count %>
</p>

<p>
  <strong>About:</strong>
  <%= @book.about %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @book.owner %>
</p>

<p>
  <strong>Date of realize:</strong>
  <%= @book.date_of_realize %>
</p>

<p>
  <strong>Binding:</strong>
  <%= @book.binding %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @book.genre %>
</p>

<p>
  <strong>Book for sell:</strong>
  <%= @book.book_for_sell %>
</p>

<% if current_user.present? %>
  <%= link_to 'buy it', new_book_order_path(@book)%> |
    <%if current_user.admin %>
      <%= link_to 'Edit', edit_book_path(@book) %>
    <% end %>|
<% end %>
