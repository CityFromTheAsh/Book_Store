<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Page count</th>
      <th>About</th>
      <th>Owner</th>
      <th>Date of realize</th>
      <th>Binding</th>
      <th>Genre</th>
      <th>Book for sell</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= book.page_count %></td>
        <td><%= book.about %></td>
        <td><%= book.owner %></td>
        <td><%= book.date_of_realize %></td>
        <td><%= book.binding %></td>
        <td><%= book.genre %></td>
        <td><%= book.book_for_sell %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

