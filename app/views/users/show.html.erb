<%= render 'layouts/top_panel' %></<br>
<strong>Login :</strong>
<%= @user.login %>
<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table-bordered">
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Price</th>
    <th>Page count</th>
    <th>About</th>
    <th>Owner</th>
    <th>Date of realize</th>
    <th>Binding</th>
    <th>Genre</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @user.books.each do |book| %>
      <tr>
        <td class="col-md-1"><%= book.title %></td>
        <td class="col-md-1"><%= book.author %></td>
        <td class="col-md-1"><%= book.price %></td>
        <td class="col-md-1"><%= book.page_count %></td>
        <td class="col-md-1"><%= book.about %></td>
        <td class="col-md-1"><%= link_to book.owner, book.user %></td>
        <td class="col-md-1"><%= book.date_of_realize %></td>
        <td class="col-md-1"><%= book.binding %></td>
        <td class="col-md-1"><%= book.genre %></td>
        <td class="col-md-1"><%= link_to 'Show', book %></td>
        <% if @admin === true %>
            <td class="col-md-1"><%= link_to 'Edit', edit_book_path(book) %></td>
            <td class="col-md-1"><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>